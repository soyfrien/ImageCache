						  Version="8.0.3" />
		<PackageReference Condition="'$(TargetFramework)' == 'net8.0-maccatalyst'" 
						  Include="Microsoft.Maui.Controls" 
						  Version="8.0.3" />
		<PackageReference Condition="'$(TargetFramework)' == 'net8.0-windows'"
						  Include="Microsoft.Maui.Controls" 
						  Version="8.0.3" />
	</ItemGroup>
	
	
